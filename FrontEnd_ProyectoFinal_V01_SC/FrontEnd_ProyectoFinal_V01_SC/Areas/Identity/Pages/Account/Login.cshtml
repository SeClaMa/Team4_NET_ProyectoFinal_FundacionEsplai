@page
@model LoginModel

@{
    ViewData["Title"] = "Conectarse";
}

<div class="container-profile">
    <h1 class="loginH">@ViewData["Title"]</h1>
    <div class="row loginC">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>Use una cuenta de la web para conectarse</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Conectarse</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Desea recuperar la contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrese como un nuevo Usuario</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
       
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
